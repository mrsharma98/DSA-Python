   "source": [
    "def is_sorted(arr, index=1):\n",
    "    if index >= len(arr):\n",
    "        return True\n",
    "    if arr[index] < arr[index-1]:\n",
    "        return False\n",
    "    \n",
    "    return is_sorted(arr, index+1)"
   ]
